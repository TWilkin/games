{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es2016"],
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node", "mocha"],
      "stripInternal": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
    },
    "include": [
      "src/**/*"
    ]
  }